<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"

    android:shape="rectangle"> <!-- Can be "rectangle", "oval", "line", or "ring" -->

    <!-- Solid background color -->
    <solid android:color="@color/sky_blue" /> <!-- Replace with your color -->

    <!-- Optional: Rounded corners -->
    <corners android:radius="8dp" /> <!-- Adjust radius as needed -->

    <!-- Optional: Border -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Border color and width -->
</shape>
